<launch>

    <node pkg="slam_toolbox" type="sync_slam_toolbox_node" name="slam_toolbox" output="screen">
        <rosparam command="load" file="$(find slam_toolbox)/config/mapper_params_online_async.yaml" />
        <param name="mode" value="mapping"/>
        <param name="map_file_name" value=""/>
        <param name="use_sim_time" value="false"/>
        <param name="base_frame" value="base_link"/>
        <param name="odom_frame" value="odom"/>
        <param name="map_frame" value="map"/>
        <param name="scan_topic" value="/front/scan"/>
        <param name="map_publish_period_sec" value="0.2"/>
        <param name="transform_publish_period" value="0.2"/>
        <param name="resolution" value="0.05"/>
        <param name="provide_odom_frame" value="true"/>
        <param name="scan_queue_size" value="1"/>
        <param name="throttle_Scans" value="1"/>
        <param name="minimum_travel_distance" value="0.1"/>
        <param name="minimum_travel_heading" value="0.02"/>
        <param name="scan_buffer_size" value="100"/>
        <param name="scan_buffer_maximum_scan_distance" value="5.0"/>
    </node>

    <node pkg="move_base" type="move_base" name="move_base" respawn="false" output="screen">
        <rosparam file="$(find screwed_2dnav)/config/costmap_common_params.yaml" command="load" ns="global_costmap"/>
        <rosparam file="$(find screwed_2dnav)/config/costmap_common_params.yaml" command="load" ns="local_costmap"/>
        <rosparam file="$(find screwed_2dnav)/config/global_costmap_params.yaml" command="load"/>
        <rosparam file="$(find screwed_2dnav)/config/local_costmap_params.yaml" command="load"/>
        <rosparam file="$(find screwed_2dnav)/config/base_local_planner_params.yaml" command="load"/>
        <remap from="cmd_vel" to="/move_base/cmd_vel"/>
    </node>

</launch>